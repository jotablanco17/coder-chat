{{#if prod.id}}
<h1>ID PROD : {{prod.id}}</h1>
<div>

    <div class="card text-center" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"> title : {{prod.title}}</h5>
        </div>
        <ul class="list-group list-group-flush ">
            <li class="list-group-item">category : {{prod.category}}</li>
            <li class="list-group-item">price : ${{prod.price}}</li>
            <li class="list-group-item">stock: {{prod.stock}}</li>
        </ul>
        <div class="card-body">
            <a href="/products/{{prod.id}}" class="card-link">detalle</a>
            <a href="#" class="card-link">Another link</a>
        </div>
    </div>
    
</div>
{{else}}
<h1>Prod not found</h1>
{{/if}}

