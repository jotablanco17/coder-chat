

<h1 class="text-center text-success p-2">Coder Server</h1>

<div class="container">
    <div class="row justify-content-center">
        {{#each prods}}
        <div class="col-md-4">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <h5 class="card-title">title: {{this.title}}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">category: {{this.category}}</li>
                    <li class="list-group-item">price: ${{this.price}}</li>
                    <li class="list-group-item">stock: {{this.stock}}</li>
                </ul>
                <div class="card-body">
                    <a href="/products/{{this.id}}" class="card-link">detalle</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
